<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title>Add Categories</title>
    <link rel="stylesheet" href="./css/bootstrap.min.css">
    <style media="screen">
    /* Nav CSS */
    .logo {
      width: 150px;
      margin-left: 100px;
    }
    .nav-link{
      font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
      font-size:large;
      margin: 65px 0px 0px 20px;
    }

    .dropdown{
      float: right;
      margin-left: 20%;
    }
    /* Nav CSS */
    </style>
  </head>
  <body>
    <header>
      <nav class="navbar navbar-expand-sm bg-dark navbar-dark fix">
      <a class ="navbar-brand" href="/">
        <img src="/cooks-club.png" alt="Logo" style="width:170px;height:100px"></a>

      <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#collapsibleNavbar">
          <span class="navbar-toggler-icon"></span>
        </button>
          <div class="collapse navbar-collapse" id="collapsibleNavbar">
              <ul class="navbar-nav">
                <li class="nav-item active">
                  <a class="nav-link disabled" href="/">Home</a>
                </li>

                <li class="nav-item active">
                  <a class="nav-link" href="/users/login">Login</a>
                </li>
                <li class="nav-item active">
                  <a class="nav-link" href="/users/register">Register</a>
                </li>
                <li class="nav-item active">
                  <a class="nav-link" href="/existingusers_profile">Profile</a>
                </li>
              </ul>
           </div>
        </nav>
    </header>
    <h2>Add Categories</h2>
    <form action="/categories/<%=recipe%>" method="post">
      <select name="categories">
        <% for (let i = 0; i < categories.length; i++) { %>
          <option value="<%=categories[i].id%>"><%=categories[i].cat_name%></option>
      <%  } %>
      </select>
      <input type="submit">
    </form>
    <h3>Current Categories:</h3>

    <% for(let i = 0; i < added_cats.length; i++) { %>
      <p><%=added_cats[i].cat_name%> <a href="/categories/remove/<%=recipe%>/<%=added_cats[i].category_id%>">Remove</a></p>
    <% } %>
    <script
    src="https://code.jquery.com/jquery-3.3.1.min.js"
    integrity="sha256-FgpCb/KJQlLNfOu91ta32o/NMZxltwRo8QtmkMRdAu8="
    crossorigin="anonymous"></script>
    <script type="text/javascript" src="/js/bootstrap.js"></script>
  </body>
</html>
