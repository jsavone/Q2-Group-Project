<body>
    
    <div class="recipeContainer">
        <% for(let i = 0; i < recipes.length; i++) { %>
          <div class="recipe row">
            <div class="recipeImage col-md-3">
              <img src="<%=recipes[i].recipe_image%>" alt="recipe image">
            </div>
            <div class="recipeInfo col-md-3">
              <h2><%=recipes[i].recipe_name%></h2>
              <p>by - <%=recipes[i].name%></p>
            </div>
            <div class="recipeVotes col-md-3">
              <p>Total Votes:</p>
