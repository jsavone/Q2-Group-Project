<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <link rel="stylesheet" href="/css/bootstrap.min.css">
    <style media="screen">

      body {
        background-color: #E0E0E0;
        height: 100vh;
        width: 100vw;
      }

      .recipeContainer{
        height:100vh;
        padding-top: 10px;
        margin:0px auto;
      }

      .recipeImage img{
        border-radius: 5%;
        height: 130px;
        width: 175px;
        margin: 5px 0 5px 0;
      }

      .recipe {
        text-align: center;
        margin: 10px auto;
        display: flex;
        box-shadow: 0px 10px 15px 10px rgba(0,0,0,0.15);
        border-radius: 5px;
        background-color: #F5F5F5;
        width: 80%;
      }

      .viewRecipe {
        text-align: right;
      }

      /* Nav CSS */
      .logo {
        width: 150px;
        margin-left: 100px;
      }
      .nav-link{
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        font-size:large;
        margin: 65px 0px 0px 20px;
      }

      .dropdown{
        float: right;
        margin-left: 35%;
      }
      /* Nav CSS */

      a:hover {
        text-decoration: none;
      }

      a h2 {
        color: black;
      }

    </style>
    <title>Cooks Club</title>
  </head>
<body>
  <header>
    <nav class="navbar navbar-expand-sm bg-dark navbar-dark fix">
    <a class ="navbar-brand" href="#">
      <img src="/cooks-club.png" alt="Logo" style="width:170px;height:100px"></a>

    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#collapsibleNavbar">
        <span class="navbar-toggler-icon"></span>
      </button>
        <div class="collapse navbar-collapse" id="collapsibleNavbar">
            <ul class="navbar-nav">
              <li class="nav-item active">
                <a class="nav-link disabled" href="/">Home</a>
              </li>

              <li class="nav-item active">
                <a class="nav-link" href="/users/login">Login</a>
              </li>
              <li class="nav-item active">
                <a class="nav-link" href="/users/register">Register</a>
              </li>
              <li class="nav-item active">
                <a class="nav-link" href="/profile">Profile</a>
              </li>
            </ul>

            <div class="dropdown">
                <button type="button" class="btn btn-primary dropdown-toggle" data-toggle="dropdown">
                    Categories
                  </button>
              <div class="dropdown-menu">
              <li class="nav-item">
                <% for(let i=0; i < categories.length; i++) { %>
                  <a class="dropdown-item"  href="/recipe/categories/<%=categories[i].id%>"><%=categories[i].cat_name%></a>
                <% } %>
              </li>
              </div>
            </div>
         </div>
      </nav>
  </header>
    <center>
      <div class="recipeContainer">
          <% for(let i = 0; i < recipes.length; i++) { %>
            <div class="recipe row">
              <div class="recipeImage col-md-3">
              <a href="/recipe/<%=recipes[i].id%>"><img src="<%=recipes[i].recipe_image%>" alt="recipe image"></a>
              </div>
              <div class="recipeInfo col-md-4">
                <a href="/recipe/<%=recipes[i].id%>"><h2><%=recipes[i].recipe_name%></h2></a>
                <p>by - <%=recipes[i].name%></p>
              </div>
              <div class="recipeVotes col-md-3">
                <p>Total Votes:</p>
                <h1><%=recipes[i].total_votes%></h1>
              </div>
              <div class="viewRecipe col-md-2">
                <a class="btn primary" href="/recipe/<%=recipes[i].id%>">View</a>
              </div>
            </div>
          <% } %>
      </div>
    </center>
    <script
    src="https://code.jquery.com/jquery-3.3.1.min.js"
    integrity="sha256-FgpCb/KJQlLNfOu91ta32o/NMZxltwRo8QtmkMRdAu8="
    crossorigin="anonymous" defer></script>
    <script type="text/javascript" src="/js/bootstrap.js" defer></script>
  </body>
</html>
