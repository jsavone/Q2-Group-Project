<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title></title>
    <link rel="stylesheet" href="./css/bootstrap.min.css">
     <style media="screen">
      *{
        text-align: center;
      }

      .card {
        font-size: 20px;
        background-color: #F5F5F5;
        margin: 30px;
        text-align: center;
        box-shadow: 0px 10px 15px 10px rgba(0,0,0,0.15);
        min-width: 250px;
        border-radius: 5px;
      }

      .card img {
        border-radius: 3%;
        margin: 0 auto;
      }

      h1{
        font-size: 20px;
      }

      .flex-container{
        padding-top: 10px;
      }

      header{
        width:100vw;
        margin-left: 0%;
      }

      body{
        background-color: #E0E0E0;
      }

      .listTitle {
        font-size: 25px;
        display: block;
        text-align: center;
      }

      .container {
        display: flex;
        flex-wrap: wrap;
      }

      .logo {
        width: 150px;
        margin-left: 100px;
      }
      .nav-link{
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        font-size:large;
        margin: 65px 0px 0px 20px;
      }

      .dropdown{
        float: right;
        margin-left: 20%;
      }
      #userImage {
        margin-left: 20%;
      }
      a:hover {
        text-decoration: none;
      }

      </style>
  </head>
  <body>
    <header>
        <nav class="navbar navbar-expand-sm bg-dark navbar-dark fix">
        <a class ="navbar-brand" href="/">
          <img src="/cooks-club.png" alt="Logo" style="width:170px;height:100px"></a>

        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#collapsibleNavbar">
            <span class="navbar-toggler-icon"></span>
          </button>
            <div class="collapse navbar-collapse" id="collapsibleNavbar">
                <ul class="navbar-nav">
                  <li class="nav-item active">
                    <a class="nav-link disabled" href="/">Home</a>
                  </li>

                  <li class="nav-item active">
                    <a class="nav-link" href="/logout">Logout</a>
                  </li>
                  <li class="nav-item active">
                    <a class="nav-link" href="/create_recipe/<%=recipe.id%>>">Create Recipe</a>
                  </li>
                  <% if (user) { %>
                  <li class="nav-item active">
                    <a class="nav-link" href="/profile">Profile</a>
                  </li>
                  <% } %>
                </ul>
               <img id="userImage" src="<%=user.img_url%>" style="height:100px; width:100px; float:right;">
             </div>
             </div>
        </nav>
    </header>

   <div class="flex-container">
     <h1 class="listTitle">My recipes</h1>
     <div class="myRecipes">
        <div class="container">
          <% for(let i = 0; i<recipe.length; i++){ %>
            <div class="card">
              <h1 ><%= recipe[i].recipe_name %></h1>
              <img src="<%=recipe[i].recipe_image%>" style="height:200px; width:200px">
              <a href="/recipe/<%= recipe[i].id%>" class ="aligncenter">View</a>
            </div>
          <% } %>
        </div>
      </div>
    <hr/>
    <h1 class="listTitle">Saved recipes</h1>
    <div class="savedRecipes">
      <div class="container">
        <% for(let i = 0; i<saved_recipes.length; i++){ %>
          <div class="card">
            <h1 ><%= saved_recipes[i].recipe_name %></h1>
            <img src="<%=saved_recipes[i].recipe_image%>" style="height:200px; width:200px">
            <a href="/recipe/<%= saved_recipes[i].id%>" class ="aligncenter">View</a>
            <a href="/recipe/remove/<%=saved_id[i].id%>" class ="aligncenter">Remove</a>
          </div>
          <% } %>
      </div>
  </div>
  </div>
  <script
  src="https://code.jquery.com/jquery-3.3.1.min.js"
  integrity="sha256-FgpCb/KJQlLNfOu91ta32o/NMZxltwRo8QtmkMRdAu8="
  crossorigin="anonymous" defer></script>
  <script type="text/javascript" src="/js/bootstrap.js" defer></script>
</body>
</html>
